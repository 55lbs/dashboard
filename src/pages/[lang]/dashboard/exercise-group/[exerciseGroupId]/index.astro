---
import Ads from '@/components/Dashboard/Ads.astro';
import ExerciseCard from '@/components/Dashboard/ExerciseCard.astro';
import { OutdatedBadge } from '@/components/Dashboard/OutdatedBadge';
import RecordOverview from '@/components/Dashboard/RecordOverview.astro';
import Dashboard from '@/layouts/Dashboard.astro';
import {
  Badge,
  Card,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle,
} from '@55lbs/components';
import { messages as m, runtime } from '@55lbs/i18n';
import { LuTrophy } from 'react-icons/lu';

const { exerciseGroupId } = Astro.params;

const exercises = [
  { name: 'Muscle Snatch', record: '84kg', ranking: 10 },
  { name: 'Power Snatch', record: '84kg', ranking: 99 },
  { name: 'Squat Snatch', record: '84kg', ranking: 1001 },
  { name: 'Hang Muscle Snatch', record: '84kg', ranking: 10 },
  { name: 'Hang Power Snatch', record: '-', ranking: 10 },
  { name: 'Hang Squat Snatch', record: '84kg', ranking: 100 },
  { name: 'High Hang Snatch', record: '84kg', ranking: 10 },
];
---

<Dashboard title={m.exerciseGroupTitle()}>
  <div transition:name={`poster-${exerciseGroupId}`}>
    <ExerciseCard
      exercise={{
        name: 'Snatches',
        img: 'https://img.freepik.com/free-photo/close-up-man-doing-crossfit-workout_23-2149080442.jpg?t=st=1724930584~exp=1724934184~hmac=f670276c07f90fef139970885d0594e520171e30642c853c77663dd3a4587d47&w=740',
      }}
    />
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
    <RecordOverview />
    <Ads />
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 w-full gap-6 mt-6">
    {
      exercises.map(({ name, record, ranking }, key) => (
        <a
          href={`/${runtime.languageTag()}/dashboard/exercise-group/${exerciseGroupId}/exercise/${key}`}
        >
          <div
            transition:name={`exercise-${exerciseGroupId}-${key}`}
            class="h-full block"
          >
            <Card className="cursor-pointer hover:shadow-xl transition-shadow h-full">
              <CardHeader>
                <div class="flex">
                  <CardDescription className="text-base flex-1">
                    {name}
                  </CardDescription>
                  {ranking < 11 ? (
                    <Badge className="bg-gradient flex gap-2">
                      Top 10 <LuTrophy />
                    </Badge>
                  ) : ranking < 31 ? (
                    <Badge className="bg-gradient">Top 30</Badge>
                  ) : ranking < 101 ? (
                    <Badge className="bg-gradient">Top 100</Badge>
                  ) : null}
                </div>
                <CardTitle className="text-3xl">{record}</CardTitle>
              </CardHeader>
              {record !== '-' && (
                <CardFooter className="flex gap-2">
                  <OutdatedBadge client:load />
                  {/* <Badge variant="default">Insight</Badge> */}
                </CardFooter>
              )}
            </Card>
          </div>
        </a>
      ))
    }

    <!-- {
      exercises.map(({ name, record }) => (
        <Card className="bg-transparent flex items-center">
          <CardHeader className="flex-1">
            <CardTitle>{name}</CardTitle>
          </CardHeader>
          <CardContent className="p-6">
            <p class="text-lg">{record}</p>
          </CardContent>
          <div class="flex pr-3">
            <LuChevronRight size="2rem" />
          </div>
        </Card>
      ))
    } -->
  </div>
</Dashboard>
