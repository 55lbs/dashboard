---
import { Button, Separator } from '@55lbs/components';
import Logo from '../Logo.astro';
import {
  LuCalculator,
  LuCog,
  LuDatabase,
  LuDumbbell,
  LuHome,
  LuSliders,
  LuX,
} from 'react-icons/lu';
import { runtime } from '@55lbs/i18n';
---

<div
  class="fixed w-full h-full bg-black z-30 left-0 top-0 hidden transition-opacity"
  id="sidebar-overlay"
>
</div>
<div
  class="w-80 bg-gradient text-background dark:bg-slate-800 p-6 flex flex-col justify-between gap-20 fixed top-0 left-0 z-40 h-screen overflow-y-auto transition-transform -translate-x-full xl:visible xl:sticky xl:translate-x-0"
  id="sidebar"
>
  <div class="flex items-center gap-4 justify-between">
    <div class="w-16 xl:w-24">
      <Logo />
    </div>
    <Button variant="ghost" className="p-0 mobile-menu xl:hidden">
      <LuX size="2em" />
    </Button>
  </div>

  <div class="flex-1 text-lg font-light">
    <ul class="flex flex-col gap-8">
      <li>
        <a
          href={`/${runtime.languageTag()}/dashboard`}
          class="flex items-center gap-3"
        >
          <LuHome />
          Dashboard
        </a>
      </li>
      <li>
        <a href="#" class="flex items-center gap-3">
          <LuDumbbell />
          Barbell Calc
        </a>
      </li>
      <li>
        <a href="#" class="flex items-center gap-3">
          <LuCalculator />
          Conversor
        </a>
      </li>
    </ul>
  </div>

  <div>
    <Separator />
    <ul class="mt-3">
      <li>
        <a href="#" class="flex items-center gap-3">
          <LuSliders />
          Settings
        </a>
      </li>
    </ul>
  </div>
</div>
