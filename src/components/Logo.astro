---
import Svg from './Svg.astro';

export type Props = {
  orientation?: 'horizontal' | 'vertical';
  color?: string;
};

const { orientation = 'horizontal' } = Astro.props as Props;

const logo = orientation === 'horizontal' ? 'logo.svg' : 'logo-vertical.svg';
---

<Svg src={`../../public/assets/${logo}`} class:list={[`fill-background`]} />
